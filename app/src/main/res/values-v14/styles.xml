<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style parent="android:Theme.Holo.Light.DarkActionBar" name="AppBaseTheme">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowTitleStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/white_frame_black_content_rect</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
