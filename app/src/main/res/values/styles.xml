<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.WithoutActionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.WithoutActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="IndicatorView" >
        //总页数
        <attr name="total_page_count" format="integer"></attr>
        //小点点选中的颜色
        <attr name="focus_color" format="color"></attr>
        //小点点未选中的颜色
        <attr name="un_focus_color" format="color"></attr>
    </declare-styleable>
</resources>
